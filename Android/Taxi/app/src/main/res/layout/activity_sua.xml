<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="So xe"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/editSoxe"

        android:hint="So xe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:text="Quang duong"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/editQuangduong"
        android:hint="Quang duong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Đơn giá"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/editDonGia"
        android:inputType="numberDecimal"
        android:hint="Đơn giá"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Khuyen mai"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/editKhuyenmai"
        android:inputType="numberDecimal"
        android:hint="Khuyen mai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:textSize="30dp"
            android:text="Sua"
            />
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:textSize="30dp"
            android:text="Back"
            />

    </LinearLayout>

</LinearLayout>