@*@model IEnumerable<QuanLyThuoc.Models.TDanhMucThuoc>*@
@using QuanLyThuoc.Models;
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TDanhMucThuoc>
@{
    ViewData["Title"] = "DanhMucThuoc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>DanhMucThuoc</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr class="table-warning">
            <th>
               Tên sản phẩm
            </th>
          
            <th>
                Giá lớn nhất
            </th>
            <th>
               Giá nhỏ nhất
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            string @cls = "table-success";
        }
@foreach (var item in Model) {
            i = i + 1;
            cls = "table-success";
            if(i%2==0)
            {
                cls = "table-primary";
            }
            <tr class="@cls">
            <td>
                @Html.DisplayFor(modelItem => item.TenThuoc)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.GiaLonNhat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaNhoNhat)
            </td>
          
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaThuoc">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaThuoc">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaThuoc">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@*@Html.PagedListPager(Model,page=>Url.Action("Danhmucthuoc",new{page=page}))*@
@Html.PagedListPager(Model,page=>Url.Action("DanhMucThuoc", new {page = page}), new
X.PagedList.Web.Common.PagedListRenderOptions(){
    LiElementClasses = new List<String> {"page-item"},
    PageClasses = new List<String> {"page-link"}
})