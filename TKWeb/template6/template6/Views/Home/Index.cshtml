@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
@model List<SanPham>
@foreach(var item in Model)
{
	<div class="col-lg-3 col-md-6">
		<div class="single-product">
            <a asp-controller="Home" asp-action="ChiTietSanPham" asp-route-maSp="@item.MaSanPham">
                <img class="img-fluid" src="@Url.Content("../Images QLBanChauCanh/" + item.AnhDaiDien)" alt="">
            </a>
			<div class="product-details">
				<h6>
					@item.TenSanPham
				</h6>
				<div class="price">
					<h6>@item.DonGiaBanNhoNhat</h6>
					
				</div>
				<div class="prd-bottom">
					<a asp-action="XoaSanPham" asp-route-masp="@item.MaSanPham" class="social-info">
						<span class="ti-bag"></span>
						<p class="hover-text">Delete</p>
					</a>
				</div>
				
			</div>
		</div>
	</div>
}
